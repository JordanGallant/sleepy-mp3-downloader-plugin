{
  "manifest_version": 3,
  "name": "Sleepy MP3 Downloader",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "scripting",
    "downloads",
    "storage"
  ],
  "host_permissions": [
    "https://soundcloud.com/*",
    "https://audio-api-6r6z.onrender.com/*",
    "https://open.spotify.com/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://soundcloud.com/*",
        "https://open.spotify.com/*"
      ],
      "js": [
        "dist/main.js"
      ],
      "type": "module"
    }
  ],
  "action": {
    "default_popup": "content.html",
    "default_icon": {
      "16": "icon.png"
    }
  }
}